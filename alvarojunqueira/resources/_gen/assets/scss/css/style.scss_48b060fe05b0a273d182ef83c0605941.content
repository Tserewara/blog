*{margin:0;padding:0;box-sizing:0}body{background:#171717;color:#fff;font-family:roboto,sans-serif;min-height:100vh;display:flex;flex-direction:column}.brand{display:flex;align-items:center;padding:1rem 0;text-decoration:none;color:#fff;font-size:24px}.brand a{text-decoration:none}.header{padding:0 10rem;display:flex;justify-content:space-between;align-items:center;margin-bottom:3rem;border-bottom:1px solid #232327;background:#202020;font-family:poppins,sans-serif}main,footer{margin:0 10rem}.articles h2{margin-bottom:2rem}.article{display:flex;flex-direction:column;justify-content:space-between;padding:2rem;background-color:#202020;border-radius:4px}.articles a{text-decoration:none;color:#fff;font-size:24px}.tags{margin-top:1rem;font-size:16px}footer{margin-top:auto}.menu a{margin-right:1rem;font-size:18px;font-weight:700;color:#fff;text-decoration:none}.menu a:hover{color:#da0037}